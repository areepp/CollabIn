import Layout from '../../layouts/Layout.astro'
import Content from '../projects/content'
import ProjectsHeader from '../projects/projects-header'
import LayoutPageTransition from '../../layouts/LayoutPageTransition.astro'
---

<Layout title="My Projects | CollabIn">
  <LayoutPageTransition className="bg-text">
    <div class="container px-5 py-6 mx-auto">
      <ProjectsHeader subHeaderText="MY PROJECTS" client:load />
